<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screen"
    android:background="@color/colorBG"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/monoinfo"
        android:tint="#eaeaea"
        android:padding="20dp"
        android:background="@drawable/button_corners_6"
        android:id="@+id/button1"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/monogear"
        android:tint="#eaeaea"
        android:padding="20dp"
        android:background="@drawable/button_corners_1"
        android:id="@+id/button3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/monotrash"
        android:padding="20dp"
        android:tint="#eaeaea"
        android:background="@drawable/button_corners_4"
        android:id="@+id/button4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/list_icon"
        android:padding="30dp"
        android:tint="#eaeaea"
        android:background="@drawable/button_corners_3"
        android:id="@+id/button5" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/monosearch"
        android:tint="#eaeaea"
        android:padding="20dp"
        android:background="@drawable/button_corners_2"
        android:id="@+id/button6" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/monoeditw"
        android:tint="#eaeaea"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/button_corners_5"
        android:id="@+id/button7" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/book"
        android:padding="20dp"
        android:background="@drawable/button_corners"
        android:scaleType="fitCenter"
        android:id="@+id/button2"
        />

</FrameLayout>
