<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ac.hal.ths35033.mylibrary" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/myicon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CookAddActivity"
            android:label="@string/title_activity_cook_add" >
        </activity>
        <activity
            android:name=".BookListActivity"
            android:label="@string/title_activity_book_list"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".BookAddActivity"
            android:label="@string/title_activity_book_add" >
        </activity>
        <activity
            android:name=".BookDetailActivity"
            android:label="@string/title_activity_book_detail" >
        </activity>
        <activity
            android:name=".CameraPreviewActivity"
            android:label="@string/title_activity_camera_preview" >
        </activity>
        <activity
            android:name=".BookAddCompleteActivity"
            android:label="@string/title_activity_book_add_complete" >
        </activity>
    </application>

</manifest>
